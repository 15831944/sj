{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "make -j 8",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "make -j 8 mode=release",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "install",
            "type": "shell",
            "command": "make install",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}